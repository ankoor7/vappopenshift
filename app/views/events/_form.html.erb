<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "span6" %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "span6", rows: 4 %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= select_datetime DateTime.now %>
  </div>
  <div class="field">
    <%= f.label "Address" %><br />
    <%= f.text_field :location, :class => "span6" %>
  </div>
  <div class="field">
    <%= f.label "Number of volunteers needed" %><br />
    <%= f.select :number_volunteers, ((1..30).map {|i| [i,i] }), :class => "span2" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
