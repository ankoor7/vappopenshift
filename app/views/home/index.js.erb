// AJAX call to update events on the home page
$('#events').html('<%= escape_javascript render partial: "shared/event_summary", locals: {events: @events} unless @events.nil? %>');
$('#events_paginator').html('<%= escape_javascript(paginate(@events, :remote => true, :param_name => "events_page").to_s) unless @events.nil? %>');

